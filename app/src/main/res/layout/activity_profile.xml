<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Main">

    <!--TOP NAVIGATION BAR-->
    <LinearLayout
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_nav_profile_border"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:weightSum="4"
        >

        <!-- Profile Picture Icon-->
        <ImageView
            android:id="@+id/small_profile_icon"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/profile_circle_icon" />

        <!-- Container for Email & Address-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Email -->
            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albertsans"
                android:text="cucumelon123@gmail.com"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Address Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Address Text -->
                <TextView
                    android:id="@+id/addresstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albertsans"
                    android:text="Set your address"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <!-- Edit Address Icon -->
                <ImageButton
                    android:id="@+id/editaddress_icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/edit_address_icon"
                    android:layout_marginLeft="6dp"
                    android:alpha="0.5"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_navigation_bar"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Order History Text -->
            <TextView
                android:id="@+id/orderhistorytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:fontFamily="@font/albertsans"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginBottom="10dp"/>

            <!-- history 1 -->
            <View
                android:id="@+id/history1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:padding="10dp"
                android:background="@drawable/cartbackground"/>
            <!-- history 2 -->
            <View
                android:id="@+id/history2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:padding="10dp"
                android:background="@drawable/cartbackground"/>
            <!-- history 3 -->
            <View
                android:id="@+id/history3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:padding="10dp"
                android:background="@drawable/cartbackground"/>
            <!-- history 4 -->
            <View
                android:id="@+id/history4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:padding="10dp"
                android:background="@drawable/cartbackground"/>
        </LinearLayout>
    </ScrollView>


    <!-- BOTTOM NAVIGATION BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#FFDFE1"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:weightSum="5">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            app:srcCompat="@drawable/home_icon" />

        <!-- FrameLayout containing Cart Icon and Badge -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <!-- Cart Icon -->
            <ImageButton
                android:id="@+id/cart_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/cart"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:srcCompat="@drawable/shopping_cart" />

            <!-- Cart Count Badge -->
            <TextView
                android:id="@+id/cart_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/badge_background"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"/>
        </FrameLayout>

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/profile"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person_icon" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Profile Icon -->
            <ImageButton
                android:id="@+id/order_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/profile"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="@drawable/order_icon" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>