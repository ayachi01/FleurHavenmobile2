<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Cart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FDE9EC"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/albertsans"
                        android:gravity="center"
                        android:text="Cart"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="25sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albertsans"
                android:textColor="#000"
                android:text="@string/tvproduct"
                android:textSize="18sp"
                android:layout_margin="15dp"
                tools:ignore="MissingConstraints"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="121dp" />

            <!-- RecyclerView for cart items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION BAR / TOTAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/total_purchase"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albertsans"
            android:text="@string/tvtotal"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albertsans"
            android:text="â‚± 0"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:backgroundTint="#EEEEEE"
            android:fontFamily="@font/albertsans"
            android:layout_marginTop="10dp"
            android:text="@string/check_out"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- BOTTOM NAVIGATION BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#FFDFE1"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:weightSum="5">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            app:srcCompat="@drawable/home_icon" />

        <!-- FrameLayout containing Cart Icon and Badge -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <!-- Cart Icon -->
            <ImageButton
                android:id="@+id/cart_icon"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/cart"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cart" />

            <!-- Cart Count Badge -->
            <TextView
                android:id="@+id/cart_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/badge_background"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"/>
        </FrameLayout>

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/profile"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Profile Icon -->
            <ImageButton
                android:id="@+id/order_icon"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/profile"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="@drawable/orders" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
