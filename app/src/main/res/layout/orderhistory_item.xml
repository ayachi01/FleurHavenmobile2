<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Flower Image -->
    <ImageView
        android:id="@+id/frame1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cartbackground"
        android:elevation="10dp"
        android:padding="10dp" />

    <!-- Order Details Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="15dp">

        <!-- Flower Name -->
        <TextView
            android:id="@+id/flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/albertsans"
            android:text="Flower Name"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Flower Price -->
        <TextView
            android:id="@+id/flower_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±1000"
            android:textColor="#000"
            android:textSize="18sp"
            android:fontFamily="@font/albertsans"/>

        <!-- Item Count & Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item: 1"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#FF6473"
                android:text="Cancel"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- Order Received Button -->
            <Button
                android:id="@+id/received_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#FDE9EC"
                android:text="Order Received"
                android:textColor="#000"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
