<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Activity_Checkout">


    <!-- Checkout -->
    <TextView
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/tv_checkout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/albertsans"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>

    <!-- Horizontal Line -->
    <View
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="25dp"
        android:paddingBottom="5dp"
        android:weightSum="4"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <!-- Products Ordered Section -->
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_product_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products Ordered"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/albertsans"
        android:textColor="@android:color/black"/>

    <!-- Horizontal Scroll for products -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="#808080"
                android:elevation="10dp"
                android:src="@drawable/checkout_background" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkout_background"
                android:background="#808080"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"/>




        </LinearLayout>
    </HorizontalScrollView>


    <!-- Items and Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items: 1"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/albertsans"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 1,000"
            android:paddingEnd="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/albertsans"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Order Option -->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Option"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/albertsans"
        android:textColor="@android:color/black"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rb_instore_pickup"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albertsans"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="In-store Pickup"
            android:textColor="@android:color/black"
            android:background="@drawable/border_checkout"
            android:padding="12dp"
            android:layout_marginBottom="4dp"/>

        <RadioButton
            android:id="@+id/rb_delivery"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albertsans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Deliver"
            android:textColor="@android:color/black"
            android:background="@drawable/border_checkout"
            android:padding="12dp"
            android:layout_marginTop="10dp"/>
    </RadioGroup>

    <!-- Payment Method -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/albertsans"
        android:text="Select Payment Method"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rb_e_wallet"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="E-Wallet"
            android:textColor="@android:color/black"
            android:background="@drawable/border_checkout"
            android:padding="12dp"
            android:layout_marginBottom="4dp"/>

        <RadioButton
            android:id="@+id/rb_cash_on_delivery"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albertsans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Cash on Delivery\nPay when you receive (for Delivery Only)"
            android:textColor="@android:color/black"
            android:background="@drawable/border_checkout"
            android:padding="12dp"
            android:layout_marginTop="10dp"/>
    </RadioGroup>

        <!-- Horizontal Line -->
        <View
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:weightSum="4"/>

        <!-- Payment Details -->
        <TextView
            android:id="@+id/tv_payment_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_margin="10dp"
            android:text="Payment Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/albertsans"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal: ₱1,000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/albertsans"/>

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Fee: ₱50"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/albertsans"/>


            <TextView
                android:id="@+id/tv_total_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: ₱1,050"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/albertsans"/>
        </LinearLayout>



        <!-- Order Button -->
    <Button
        android:id="@+id/btn_place_order"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#FBDADE"
        android:fontFamily="@font/albertsans"
        android:text="PLACE ORDER NOW"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    </LinearLayout>
</ScrollView>

    <!--BOTTOM NAVIGATION BAR-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#FDE9EC"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:weightSum="4">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home_icon" />

        <!-- FrameLayout containing Cart Icon and Badge -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <!-- Cart Icon -->
            <ImageButton
                android:id="@+id/cart_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/cart"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:srcCompat="@drawable/shopping_cart" />

            <!-- Cart Count Badge -->
            <TextView
                android:id="@+id/cart_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/badge_background"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"/>
        </FrameLayout>

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/profile"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/person_icon" />

    </LinearLayout>

</LinearLayout>