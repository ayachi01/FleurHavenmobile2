<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Light Red when pressed -->
            <solid android:color="#FBD4D4"/>
            <corners android:radius="10dp"/> <!-- Corner radius for rounded corners -->
            <stroke android:color="#000" android:width="0.9dp"/> <!-- Stroke color and width -->
        </shape>
    </item>

    <!-- Background color -->
    <corners android:radius="10dp"/> <!-- Corner radius for rounded corners -->
    <stroke
        android:color="#000"
        android:width="0.9dp"/>
</shape>